<h1>{{name}}</h1>

<p>Serves {{servings}}</p>
<p>Cook Time: {{cookTime}}</p>

<h3>Ingredients:</h3>
<ul class="ingredients">
  {{#each ingredients}}
    <li>
      <input type="checkbox">{{this}}
    </li>
  {{/each}}
</ul>
<hr>

<ul>
  {{#each directions}}
    <li>{{this}}</li>
  {{/each}}
</ul>

<h4>SOURCE:</h4>
<a href="{{source}}">{{source}}</a>

<h4>Tags:</h4>
<ul class="tags">
  {{#each tags}}
    <li>"{{this}}"</li>
  {{/each}}
</ul>

<a href="{{home}}">Home</a>
